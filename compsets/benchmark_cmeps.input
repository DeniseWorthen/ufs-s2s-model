######################################################################## 
# warm c384 benchmark cmeps
 
test cpld_fv3_384_mom6_cice_warm_cmeps_bmark: fv3_mom6_cice_cmeps.exe { 
    use cpld_fv3_384_mom6_cice_warm_bmark 
 
    MEDCOMP="cmeps"

    DAYS='2'
    FHMAX='48'
    FV3_RESTART_INTERVAL='24'

    build=fv3_mom6_cice_cmeps.exe

    prep=fv3cpld_prep(
        RUNDIR="@[RUNDIR]",modules="@[fv3_mom6_cice_cmeps.exe%modules.nems]",
        CNTL="@[CNTL]")

    # set location of cold start for mediator restarts
    # THIS IS A USER's OWN RUN and should reflect the full path to the location of the cold start
    # eg: "/scratch2/NCEPDEV/stmp1/First.LastName/rtgen.NUMBER/tmp/cpld_fv3_384_mom6_cice_cold_bmark"
    #MED_restart_data="full-path-to-user-coldstart"
    MED_restart_data="/scratch1/NCEPDEV/stmp4/Denise.Worthen/S2S_cmepschanges/@[CDATE]_cold/tmp/cpld_fv3_384_mom6_cice_cold_cmeps_bmark/"
    # For ufs restarts, 1hr cold
    RESTART_MED="ufs.s2s.c384_t025.jan.jul02.cpl.r.@[SYEAR]-@[SMONTH]-@[SDAY]-03600.nc"
}
######################################################################## 
# warm c384 from restart benchmark cmeps
 
test cpld_fv3_384_mom6_cice_restart_cmeps_bmark: fv3_mom6_cice_cmeps.exe { 
    use cpld_fv3_384_mom6_cice_restart_bmark 
 
    MEDIATOR="cmeps."
    walltime=3600   # seconds   

    #to test restarts, with field dumping on
    DAYS='0.041666666'
    FHMAX='1'

    # - set date YYYYMMDDHH
    SYEAR='2012'
    SMONTH='01'
      SDAY='01'
     SHOUR='01'
     CDATE="@[SYEAR]@[SMONTH]@[SDAY]@[SHOUR]"
    
    build=fv3_mom6_cice_cmeps.exe

    # set locations of restart files from previous warm run
    BM_IC="/scratch1/NCEPDEV/stmp4/Denise.Worthen/S2S_restart/NOICESTEP/rtgen.121636/tmp/cpld_fv3_384_mom6_cice_warm_cmeps_bmark"
    
    prep=fv3cpld_prep(
        RUNDIR="@[RUNDIR]",modules="@[fv3_mom6_cice_cmeps.exe%modules.nems]",
        CNTL="@[CNTL]")

    # set location of cold start for mediator restarts
    # THIS IS A USER's OWN RUN and should reflect the full path to the location of the cold start
    # eg: "/scratch2/NCEPDEV/stmp1/First.LastName/rtgen.NUMBER/tmp/cpld_fv3_384_mom6_cice_cold_bmark"
    #MED_restart_data="full-path-to-user-coldstart"
    MED_restart_data="@[BM_IC]"
    # For ufs restarts, 1hr cold
    RESTART_MED="ufs.s2s.c384_t025.jan.jul02.cpl.r.@[SYEAR]-@[SMONTH]-@[SDAY]-03600.nc"
}
